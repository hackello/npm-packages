{
  "name": "@joytocode/npm-packages",
  "version": "1.0.0",
  "description": "A monorepo for npm packages of JoyToCode.",
  "repository": "https://github.com/joytocode/npm-packages",
  "author": "JoyToCode <team@joytocode.com>",
  "license": "MIT",
  "scripts": {
    "build:fs": "cd packages/fs && npm run build",
    "build:log": "cd packages/log && npm run build",
    "build:process": "cd packages/process && npm run build",
    "build:monorepo": "cd packages/monorepo && npm run build",
    "link:fs": "path-exists packages/node_modules/@joytocode/fs || lnk packages/fs packages/node_modules/@joytocode",
    "link:log": "path-exists packages/node_modules/@joytocode/log || lnk packages/log packages/node_modules/@joytocode",
    "link:process": "path-exists packages/node_modules/@joytocode/process || lnk packages/process packages/node_modules/@joytocode",
    "link:monorepo": "path-exists packages/node_modules/@joytocode/monorepo || lnk packages/monorepo packages/node_modules/@joytocode",
    "prepare": "mkdirp packages/node_modules/@joytocode && npm-run-all build:* link:*",
    "start": "node packages/monorepo/lib/cli",
    "test": "npm start test",
    "prepush": "npm start ci"
  },
  "dependencies": {
    "@babel/cli": "^7.0.0-beta.49",
    "@babel/core": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "@babel/preset-stage-2": "^7.0.0-beta.49",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.0.1",
    "chokidar": "^2.0.3",
    "cross-spawn": "^6.0.5",
    "decompress": "^4.2.0",
    "download": "^7.0.0",
    "fs-extra": "^6.0.1",
    "inquirer": "^6.0.0",
    "jest": "^23.0.1",
    "jimp": "^0.2.28",
    "json-stringify-pretty-compact": "^1.2.0",
    "lnk": "^1.1.0",
    "lodash.debounce": "^4.0.8",
    "minimatch": "^3.0.4",
    "path-exists": "^3.0.0",
    "recursive-readdir": "^2.2.1",
    "standard": "^11.0.1",
    "verror": "^1.10.0"
  },
  "devDependencies": {
    "greenkeeper-lockfile": "^1.15.1",
    "husky": "^0.14.3",
    "lnk-cli": "^1.0.1",
    "npm-run-all": "^4.1.3",
    "path-exists-cli": "^1.0.0"
  }
}
